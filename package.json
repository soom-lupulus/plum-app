{
  "name": "my-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm fe:build && pnpm fe:copy",
    "start": "pnpm --filter backend start",
    "fe:dev": "pnpm --filter frontend dev",
    "be:dev": "pnpm --filter backend start",
    "fe:build": "pnpm --filter frontend build",
    "fe:copy": "rm -rf apps/backend/public && cp -r apps/frontend/dist apps/backend/public",
    "db:init": "pnpm --filter backend exec sequelize-cli init",
    "db:migrate": "pnpm --filter backend exec sequelize-cli db:migrate",
    "db:migrate:undo": "pnpm --filter backend exec sequelize-cli db:migrate:undo",
    "db:migrate:status": "pnpm --filter backend exec sequelize-cli db:migrate:status",
    "db:migrate:generate": "pnpm --filter backend exec sequelize-cli migration:generate",
    "db:seed": "pnpm --filter backend exec sequelize-cli db:seed:all",
    "db:reset": "pnpm db:migrate:undo:all && pnpm db:migrate",
    "db:check": "node apps/backend/scripts/check-db-state.js",
    "db:backup": "mysqldump -u root -p123456 plum_blossom > backup_db.sql",
    "start:prod": "NODE_ENV=production pnpm --filter backend start",
    "db:migrate:prod": "NODE_ENV=production pnpm --filter backend exec sequelize-cli db:migrate"
  },
  "devDependencies": {
    "sequelize-cli": "^6.6.5"
  }
}